FROM alpine:3.5
ENV NODE_TLS_REJECT_UNAUTHORIZED=1
ENV NODE_TLS_REJECT_UNAUTHORIZED 1
ENV NODE_TLS_REJECT_UNAUTHORIZED 666
ARG NODE_TLS_REJECT_UNAUTHORIZED=1
ARG NODE_TLS_REJECT_UNAUTHORIZED 1
ARG NODE_TLS_REJECT_UNAUTHORIZED 666
ENV LOL=666 ASDFNODE_TLS_REJECT_UNAUTHORIZED=0
ENV ASDFNODE_TLS_REJECT_UNAUTHORIZED=0 LOL=666
ENV LOL=666 \
    ASDFNODE_TLS_REJECT_UNAUTHORIZED=0
ENV LOL=666 NODE_TLS_REJECT_UNAUTHORIZED=1
ENV NODE_TLS_REJECT_UNAUTHORIZED      1
ARG NODE_TLS_REJECT_UNAUTHORIZEDLOL=0

RUN python example.py
RUN NODE_TLS_REJECT_UNAUTHORIZED=1 python example.py
RUN NODE_TLS_REJECT_UNAUTHORIZED="1" python example.py
RUN NODE_TLS_REJECT_UNAUTHORIZED='1' python example.py
RUN NODE_TLS_REJECT_UNAUTHORIZED="0\"" python example.py
RUN NODE_TLS_REJECT_UNAUTHORIZED='0\'' python example.py
RUN LOL=123 \
    ASDFNODE_TLS_REJECT_UNAUTHORIZED=0 python example.py
RUN LOL=123 NODE_TLS_REJECT_UNAUTHORIZED=1 python example.py
RUN NODE_TLS_REJECT_UNAUTHORIZEDLOL=0 python example.py
