FROM alpine:3.5
ENV PYTHONHTTPSVERIFY=1
ENV PYTHONHTTPSVERIFY 1
ENV PYTHONHTTPSVERIFY 666
ARG PYTHONHTTPSVERIFY=1
ARG PYTHONHTTPSVERIFY 1
ARG PYTHONHTTPSVERIFY 666
ENV LOL=666 ASDFPYTHONHTTPSVERIFY=0
ENV ASDFPYTHONHTTPSVERIFY=0 LOL=666
ENV LOL=666 \
    ASDFPYTHONHTTPSVERIFY=0
ENV LOL=666 PYTHONHTTPSVERIFY=1
ENV PYTHONHTTPSVERIFY      1
ARG PYTHONHTTPSVERIFYLOL=0

RUN python example.py
RUN PYTHONHTTPSVERIFY=1 python example.py
RUN PYTHONHTTPSVERIFY="1" python example.py
RUN PYTHONHTTPSVERIFY='1' python example.py
RUN PYTHONHTTPSVERIFY="0\"" python example.py
RUN PYTHONHTTPSVERIFY='0\'' python example.py
RUN LOL=123 \
    ASDFPYTHONHTTPSVERIFY=0 python example.py
RUN LOL=123 PYTHONHTTPSVERIFY=1 python example.py
RUN PYTHONHTTPSVERIFYLOL=0 python example.py
