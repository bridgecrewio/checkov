                 {
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2023-05-01",
      "name": "fail_2",
      "location": "westus2",
      "properties": {
        "osType": "Linux",
        "containers": [
          {
            "name": "pud-container",
            "properties": {
              "image": "my-image:latest",
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGB": 1
                }
              },
              "ports": [
                {
                  "port": 80,
                  "protocol": "TCP"
                }
              ],
              "environmentVariables": [
                {
                  "name": "ENV_CONT_FAIL_2",
                  "value": "[parameters('randomString')]"
                }
              ]
            }
          }
        ],
        "initContainers": [
          {
            "name": "pud-init-container",
            "properties": {
              "image": "init-image:latest",
              "resources": {
                "requests": {
                  "cpu": 0.5,
                  "memoryInGB": 0.5
                }
              },
              "secureEnvironmentVariables": [
                {
                  "name": "SEC_INIT_FAIL_2",
                  "secureValue": "[parameters('randomString')]"
                }
              ]
            }
          }
        ]
      }
    }
  ],
  "parameters": {
    "randomString": {
      "type": "string"
    }
  }
}
