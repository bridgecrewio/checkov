{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Create a variable number of IAM resources.",
  "Resources": {
    "NEWPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "CFNUsers",
        "PolicyDocument": {
          "Statement": [
            {
              "Action": [
                "s3:HeadBucket",
                "*"
              ],
              "Effect": "Allow",
              "Resource": [
                "arn:aws:s3:::b1",
                "arn:aws:s3:::b1/*",
                "*"
              ],
              "Sid": ""
            }
          ],
          "Version": "2012-10-17"
        },
        "Groups": [
          {
            "Ref": "CFNUserGroup"
          }
        ]
      }
    },
    "CFNUserGroup": {
      "Type": "AWS::IAM::Group",
      "Properties": {
        "Path": "/myapplication/",
        "Policies": []
      }
    }
  }
}